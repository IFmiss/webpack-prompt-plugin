{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "removeComments": false,
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "sourceMap": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}